<h1>New game</h1>
<%= @grid.join(' ') %>

<h3>What is the longest word you can find?</h3>

<form action="score" method="post">
  <input type="text" name="input" placeholder="Type your word">
  <input class="btn" type="submit" value="Play!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @grid %>
</form>